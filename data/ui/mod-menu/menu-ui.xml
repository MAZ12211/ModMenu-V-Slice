<box>
    <style>
        .type-enabled {
            color: #DDDDDD;
        }
        .type-disabled {
            color: #888888;
        }
        .label {
            font-size: 19px;
        }
        .modSizeText {
            filter: drop-shadow(1, 45, #000000, 1, 6, 6, 3, 3);
        }
        .modIcon {
            height: 100px;
            width: 100px;
        }
        .titleLabel {
            color: #DDDDDD;
            font-size: 20px;
            filter: drop-shadow(2, 45, #333333, 1, 6, 6, 3, 3);
        }
        .infoLabel {
            font-size: 20px;
            color: #AAAAAA;
            filter: drop-shadow(2, 45, 0, 1, 6, 6, 3, 3);
        }
        .modInfoContainer {
            width: 100%;
            padding: 5px;
        }
        .modInfo {
            width: 100%;
            font-size: 16px;
            color: #FFFFFF;
            filter: drop-shadow(1, 45, #000000, 1, 6, 6, 3, 3);
        }
        .modInfoLink {
            font-size: 16px;
            width: 100%;
            filter: drop-shadow(1, 45, #000000, 1, 6, 6, 3, 3);
        }
        .modMenuView {
            content-width: 100%;
            background-color: #000000;
            background-opacity: 0.2;
        }
        .modMenuView .vertical-scroll {
            background-opacity: 0.1;
            padding-left: 1px;
            width: 12px;
        }
        .modMenuView .vertical-scroll .button {
            background-color: #333333;
            border-radius: 2px;
            opacity: 1;
            width: 11px;
        }
        #menuTitle {
            font-name: "fonts/Tardling-Solid.ttf";
            color: #DDDDDD;
            font-size: 24px;
            filter: drop-shadow(2, 45, #333333, 1, 6, 6, 3, 3);
        }
        #modListView .listview-contents {
            padding: 5px;
        }
        #modListView .listview-contents > .itemrenderer:selected {
            border-radius: 10px;
            border:2px solid #444444;
        }
        #modItemRenderer {
            width: 100%;
            background-opacity: 0.1;
        }
        #modItemRenderer:selected {
            background-opacity: 0.8;
            background-color: #111111;
        }
        #modItemRenderer:hover {
            border-radius: 10px;
            background-color: #999999;
        }
        #modItemRenderer #icon {
            height: 70px;
            width: 70px;
            vertical-align: center;
        }
        #modItemRenderer #text {
            width: 100%;
            vertical-align: top;
            padding-top: 5px;
        }
        #modItemRenderer #summary {
            width: 100%;
            font-size: 16px;
            color: #999999;
            vertical-align: center;
            padding-left: 5px;
        }
        #modItemRenderer:hover #summary {
            color: #444444;
        }
        #modItemRenderer #enableSwitch {
            horizontal-align: right;
            vertical-align: center;
        }
        #modItemRenderer #enableSwitch @keyframes switchAnimateSelectedPill {
            0% {
                pos: 0;
                background-color: $default-background-color;
            }
            100% {
                pos: 100;
                background-color: #149c22;
            }
        }
        #modSearch {
            font-size: 17px;
            font-name: "Inconsolata";
            background-opacity: 0.7;
        }
        #modSearch:active {
            background-opacity: 1;
        }
        #menuButton {
            width: 257px;
            height: 35px;
            border-radius: 5px;
            font-size: 16px;
        }
        #menuButton:hover {
            border-radius: 12px;
        }
        #sqButton {
            width: 48px;
            height: 48px;
            border-radius: 0px;
        }
        #sqButton:hover {
            border-radius: 5px;
        }
    </style>

    <label id="menuTitle" text="Mods" style="top: 16px;"/>
</box>